@model ProductViewModel
@{
	ViewData["Title"] = "Home Page";
}
<div class="row">
	<div class="col-5">
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="@Model.ImagesPaths[0]" alt="...">
				</div>
				@for(var i = 1; i < @Model.ImagesPaths.Count; i++)
				{
					<div class="carousel-item">
						<img class="d-block w-100" src="@Model.ImagesPaths[i]" alt="...">
					</div>
				}
			</div>

			<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>

	<div class="card-body col-7">
		<a style="color: black"><h5>@Model.Name</h5></a>
		<h5>@Model.Cost ₽</h5>
		<p>@ViewLocalizer["description.text"]: @Model.Description</p>
		<a class="btn btn-dark" style="width:180px" href="/basket/add?productId=@Model.Id" role="button">@ViewLocalizer["add.button"]</a>
		<a class="btn btn-info" style="width:250px" href="/home/index" role="button">@ViewLocalizer["continue.button"]</a>
	</div>
</div>
