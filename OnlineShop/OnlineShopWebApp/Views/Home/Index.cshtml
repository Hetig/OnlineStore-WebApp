@model List<ProductViewModel>
@{
	ViewData["Title"] = "Home Page";
}
@if (Model.Count == 0 || Model == null)
{
	<h3>@ViewLocalizer["empty.text"]</h3>
}

<div class="row">
	<div class="col-lg-12 my-4">
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">			
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="/images/Carousel/Nike.jpg" alt="First slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="/images/Carousel/Puma.jpg" alt="Second slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="/images/Carousel/Adidas.jpg" alt="Third slide">
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
</div>

<hr style="border: 1px solid grey">

<div class="row" style="margin-top:50px">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-md-6 mb-4">
			<div class="card h-100 box-shadow">
				<a asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
					<img class="card-img-top" src="@product.ImagePath" height="300" width="200" style="object-fit: cover">
				</a>

				<div class="card-body">
					<div class="card-title">
						<a style="color: black" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
							<h5>@product.Name</h5>
						</a>
					</div>

					<h5>@product.Cost &#8381</h5>

				</div>
				<div class="card-footer">
					<div class="row">
						<div style="margin:auto">
							<a type="button" style="width:180px" class="btn btn-dark" href="/basket/add?productId=@product.Id">
								@ViewLocalizer["add.button"]
							</a>
						</div>
						@if (product.IsFavorite == false)
						{
							<div style="margin:auto">
								<a type="button" class="btn btn-danger" href="/favorites/add?productId=@product.Id">
									🤍
								</a>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>





