@model List<ProductViewModel>
@{
	ViewData["Title"] = "Home Page";
}

@if (Model.Count == 0 || Model == null)
{
	<h3>@ViewLocalizer["empty.text"]</h3>
	return;
}


<div class="row">

	@foreach (var product in Model)
	{
		<div class="col-3 card-body shadow-sm ">
			<img class="card-img-top" src="@product.ImagePath" height="300" width="200" style="object-fit: cover">

			<div class="card-body">
				<div class="row">
					<div style="margin-block:auto">
						<a type="button" style="width:180px" class="btn btn-dark" href="/basket/add?productId=@product.Id">
							@ViewLocalizer["add.button"]
						</a>
					</div>

					<div style="margin: auto">
						<a type="button" class="btn btn-danger" href="/compareproducts/remove?productId=@product.Id">
							✕
						</a>
					</div>
				</div>
			</div>

			<div class="card-footer" style="background-color:white">
				<div class="row">
					<p>@product.Name</p>
				</div>
				<div class="row">
					<p>@product.Cost ₽</p>
				</div>
				<div class="row">
					<p>@product.Description</p>
				</div>
			</div>
		</div>
	}

</div>


