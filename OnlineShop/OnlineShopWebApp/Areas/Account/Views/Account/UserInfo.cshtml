@model User

<div class="row">
	@await Html.PartialAsync("MenuPanel")
	<div class="col-9">
		<div class="card" style="width: 50rem;">
			<table class="table table-borderless">
				<tr>
					<td style="color:gray">@ViewLocalizer["photo.text"]:</td>
					<td>
						<img src="@Model.AvatarImageUrl" class="img-thumbnail" width="150" height="150"/>
					</td>
				</tr>
				<tr>
					<td style="color:gray">Email:</td>
					<td>@Model.Email</td>
				</tr>	
				<tr>
					<td style="color:gray">@ViewLocalizer["firstname.text"]:</td>
					<td>@Model.FirstName</td>
				</tr>
				<tr>
					<td style="color:gray">@ViewLocalizer["lastname.text"]:</td>
					<td>@Model.LastName</td>
				</tr>
				<tr>
					<td style="color:gray">@ViewLocalizer["address.text"]:</td>
					<td>@Model.Address</td>
				</tr>
				<tr>
					<td style="color:gray">@ViewLocalizer["phone.text"]:</td>
					<td>@Model.PhoneNumber</td>
				</tr>
				<tr>
					<td>
						<a class="btn btn-dark" style="width:250px" asp-area="Account" asp-controller="Account" asp-action="EditUserData">@ViewLocalizer["edit.button"]</a>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>

