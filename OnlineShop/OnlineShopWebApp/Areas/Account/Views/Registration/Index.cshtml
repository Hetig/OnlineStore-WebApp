@model Registration

<form method="post">
	<div class="row">
		<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
		<input type="hidden" name="returnUrl" value="@Model?.ReturnUrl">
	</div>
	<div class="row">		
		<div class="registration-form" style="width: 300px; margin-left:auto; margin-right:auto; margin-top:auto">
			<h3 style="text-align:center">Регистрация</h3>
			<br>
			<div class="input-form">
				<input type="email" asp-for="Login" class="form-control" placeholder="Логин">
				<span asp-validation-for="Login" style="color:red"></span>
			</div>
			<br>
			<div>
				<input type="password" asp-for="Password" class="form-control" placeholder="Пароль">
				<span asp-validation-for="Password" style="color:red"></span>
			</div>
			<br>
			<div>
				<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль">
				<span asp-validation-for="Password" style="color:red"></span>
			</div>
			<br>
			<div style="text-align:center">
				<button type="submit" style="width: 180px" class="btn btn-dark" role="button" asp-area="Account" asp-controller="Registration" asp-action="Register">
					Зарегистрироваться
				</button>
			</div>
		</div>
	</div>
</form>
