@inject IViewLocalizer ViewLocalizer

<div class="col-3">
	<div class="card" style="width: 15rem;">
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<a style="color:black" asp-area="Admin" asp-controller="Orders" asp-action="Index">
					@ViewLocalizer["orders.button"]
				</a>
			</li>
			<li class="list-group-item">
				<a style="color:black" asp-area="Admin" asp-controller="Users" asp-action="Index">
					@ViewLocalizer["users.button"]
				</a>
			</li>
			<li class="list-group-item">
				<a style="color:black" asp-area="Admin" asp-controller="Roles" asp-action="Index">
					@ViewLocalizer["roles.button"]
				</a>
			</li>
			<li class="list-group-item">
				<a style="color:black" asp-area="Admin" asp-controller="Products" asp-action="Index">
					@ViewLocalizer["products.button"]
				</a>
			</li>
		</ul>
	</div>
</div>
