@model List<RoleViewModel>
@inject IViewLocalizer ViewLocalizer

<div class="row">

	@await Html.PartialAsync("MenuPanel")

	<div class="col-9">
		@if (Model.Count == 0)
		{
			<h4>Список ролей пуст</h4>
		}
		else
		{
			<div class="card" style="width: 50rem;">
				<h3 style="text-align:center">@ViewLocalizer["roleslist.text"]</h3>
				<br>
				<table class="table">
					<thead>
						<tr>
							<th>№</th>
							<th>@ViewLocalizer["rolename.text"]</th>
							<th></th>
						</tr>
					</thead>
					@for (int i = 0; i < Model.Count; i++)
					{
						<tr>
							<td>@(i + 1)</td>
							<td>@Model[i].Name</td>
							<td>
								<a class="btn btn-danger" href="/Admin/Roles/Remove?roleName=@Model[i].Name">
									@ViewLocalizer["delete.button"]
								</a>
							</td>
						</tr>
					}
				</table>
			</div>
		}
		<br>
		<a class="btn btn-dark" style="width: 150px" asp-area="Admin" asp-controller="Roles" asp-action="Add">
			@ViewLocalizer["addrole.button"]
		</a>
	</div>
</div>

