@model AddProductViewModel


<div class="row">
	@await Html.PartialAsync("MenuPanel")

	<div class="col-9">
		<form method="post" enctype="multipart/form-data">

			<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

			<div class="AddNewProduct-form" style="width: 600px; margin-left:auto; margin-right:auto">
				<h3 style="text-align:center">@ViewLocalizer["addproduct.text"]</h3>

				<br>
				<div class="input-form">
					<input type="text" asp-for="Name" class="form-control" placeholder=@ViewLocalizer["productname.text"]>
					<span asp-validation-for="Name" style="color:red"></span>
				</div>

				<br>
				<div>
					<input type="number" asp-for="Cost" class="form-control" placeholder=@ViewLocalizer["cost.text"]>
					<span asp-validation-for="Cost" style="color:red"></span>
				</div>

				<br>
				<div>
					<input type="text" asp-for="Description" class="form-control" placeholder=@ViewLocalizer["description.text"]>
					<span asp-validation-for="Description" style="color:red"></span>
				</div>
				<br>
				<div>
					<label asp-for="UploadedFiles" style="color: red">@ViewLocalizer["addimages.text"]</label>
					<input type="file" name="UploadedFiles" multiple accept="image/*" class="form-control">
					<span asp-validation-for="UploadedFiles" style="color: red"></span>					
				</div>
				<br>
				<div style="text-align:center">
					<button type="submit" style="width: 250px" class="btn btn-success role="button" asp-area="Admin" asp-controller="Products" asp-action="Add">
						@ViewLocalizer["add.button"]
					</button>
				</div>
			</div>
		</form>
	</div>
</div>
