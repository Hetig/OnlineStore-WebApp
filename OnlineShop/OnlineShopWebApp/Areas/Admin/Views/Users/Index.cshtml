@model List<UserViewModel>
@inject IViewLocalizer ViewLocalizer

<div class="row">

	@await Html.PartialAsync("MenuPanel")

	@if (Model.Count == 0)
	{
		<h3>Список пользователей пуст</h3>
		return;
	}

	<div class="col-9">
		<div class="card" style="width: 50rem;">
			<h3 style="text-align:center">@ViewLocalizer["userslist.text"]</h3>
			<br>
			<table class="table">
				<thead>
					<tr>
						<th>Email</th>
						<th>@ViewLocalizer["phone.text"]</th>
					</tr>
				</thead>
				@foreach (var user in Model)
				{
					<tr>
						<td>
							<a href="/Admin/Users/UserInfo?userId=@user.Id">@user.UserName</a>
						</td>
						<td>@user.PhoneNumber</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>